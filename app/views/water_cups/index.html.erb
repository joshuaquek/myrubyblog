<p id="notice"><%= notice %></p>

<h1>Listing Water Cups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @water_cups.each do |water_cup| %>
      <tr>
        <td><%= water_cup.name %></td>
        <td><%= water_cup.age %></td>
        <td><%= water_cup.condition %></td>
        <td><%= link_to 'Show', water_cup %></td>
        <td><%= link_to 'Edit', edit_water_cup_path(water_cup) %></td>
        <td><%= link_to 'Destroy', water_cup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

